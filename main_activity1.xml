<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/buttons">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/circle_button_no_background"
                    android:text="A1"
                    android:textColor="@color/ThinIce"
                    android:textSize="60dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-30dp"
                    android:background="@color/ThinIce"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:text="Beginner" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/circle_button_no_background"
                    android:text="A2"
                    android:textColor="@color/ThinIce"
                    android:textSize="60dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-30dp"
                    android:textAlignment="center"
                    android:background="@color/ThinIce"
                    android:padding="20dp"
                    android:text="Elementary" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/circle_button_no_background_b"
                    android:text="B1"
                    android:textColor="@color/circlebuttonB"
                    android:textSize="60dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-30dp"
                    android:textAlignment="center"
                    android:background="@color/circlebuttonB"
                    android:padding="20dp"
                    android:text="Pre Intermediate" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/circle_button_no_background_b"
                    android:text="B2"
                    android:textColor="@color/circlebuttonB"
                    android:textSize="60dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-30dp"
                    android:background="@color/circlebuttonB"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:text="Intermediate" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/circle_button_no_background_c"
                    android:text="C1"
                    android:textColor="@color/circlebuttonC"
                    android:textSize="60dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-30dp"
                    android:background="@color/circlebuttonC"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:text="Upper Intermediate" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/circle_button_no_background_c"
                    android:text="C2"
                    android:textColor="@color/circlebuttonC"
                    android:textSize="60dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-30dp"
                    android:background="@color/circlebuttonC"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:text="Advanced" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>


