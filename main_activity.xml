<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/Main"
    android:paddingTop="20dp"
    tools:context=".MainActivity">




<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/buttons"
    android:padding="20dp"
    android:layout_marginTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Improve your listening skills"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/FontColorc"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 audiotracks"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        />
    <Button
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLICK HERE"
        android:background="@color/buttons"
        android:drawableLeft="@drawable/listeningfilled"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/buttons"
        android:padding="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test your knowledges"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/FontColorc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 questions"
            android:textSize="13dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:id="@+id/tests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLICK HERE"
            android:background="@color/buttons"
            android:drawableLeft="@drawable/testpassed"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/buttons"
        android:padding="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fresh information about everything"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/FontColorc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:textSize="13dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:id="@+id/faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLICK HERE"
            android:background="@color/buttons"
            android:drawableLeft="@drawable/faq"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>



</LinearLayout>
